<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:gravity="center_vertical"
            android:text="View all information about your car and get the latest trade-in value of your car."
            android:textColor="@color/mine_shaft"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="169dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:layout_marginLeft="98dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="98dp"
            android:src="@mipmap/android_7_car" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="75dp"
            android:gravity="center"
            android:lineSpacingExtra="4sp"
            android:text="Mercedes Benz E200(2009)"
            android:textColor="@color/mine_shaft"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginLeft="99dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="99dp"
            android:gravity="center"
            android:text="SKB2654J"
            android:textColor="@color/mine_shaft"
            android:textSize="13sp" />

        <RelativeLayout
            android:layout_width="220dp"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="70dp"
            android:background="@drawable/yuan_jiao_gary">

            <TextView
                android:id="@+id/tv_dollar"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="60dp"
                android:gravity="center"
                android:text="$123,000"
                android:textColor="@color/international_orange"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_estimated"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/tv_dollar"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="25dp"
                android:gravity="center"
                android:text="Estimated trade-in value"
                android:textColor="@color/cod_gray2"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_below="@id/tv_estimated"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="28dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="Tap to refresh quote"
                android:textColor="@color/dusty_grey"
                android:textSize="11sp" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="24dp"
            android:nestedScrollingEnabled="false" />

        <TextView
            android:id="@+id/tv_view_detailed"
            android:layout_width="203dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:background="@drawable/yuan_jiao_orange"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            android:paddingRight="12dp"
            android:paddingBottom="10dp"
            android:text="View detailed information"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>